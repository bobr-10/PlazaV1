<main class="sign-in-page">
    <div class="sign-in-page__container">
        <form class="sign-in" method="post" action="/sign_in">
            <div class="sign-in__wrapper">
                <h1 class="sign-in__title">Войти</h1>
                <div class="sign-in__item" id="signInData">
                    <div class="sign-in__field">
                        <div class="field">
                            <input class="field__input" placeholder="Email" name="email" type="email" aria-labelledby="signInData" required>
                        </div>
                    </div>
                    <div class="sign-in__field">
                        <div class="field">
                            <input class="field__input" placeholder="Пароль" name="password" type="password" aria-labelledby="signInData" required>
                        </div>
                    </div>
                </div>
                <div class="sign-in__item">
                    <div class="sign-in__btn">
                        <button class="btn btn_theme_gradient btn_with-arrow" type="submit">Войти
                            <svg class="btn_with-arrow__svg" width="18" height="18" xmlns="http://www.w3.org/2000/svg">
                                <path d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                <% if (locals.emailMessage) { %>
                    <div class="emailMessage"><%- locals.emailMessage %></div>
                <% } %>

                <% if (locals.passwordMessage) { %>
                    <div class="passwordMessage"><%- locals.passwordMessage %></div>
                <% } %>

                <% if (locals.authMessage) { %>
                    <div class="auth-message">
                        <p> <%- locals.authMessage %> </p>
                    </div>
                <% } %>
                <div class="sign-in__question">Нет аккаунта на Plaza?
                    <a class="btn btn_size_l" href="/sign_up">Создать</a>
                </div>
            </div>
        </form>
    </div>
</main>