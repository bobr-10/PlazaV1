<% function getTimeDifference(reviewDate) {
    const today = new Date();
    const review = new Date(reviewDate);
    const diffTime = Math.abs(today - review);
    const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

    if (diffDays === 0) {
        return "Сегодня";
    } else if (diffDays === 1) {
        return "Вчера";
    } else {
        return `${diffDays} дней назад`;
    }
} %>


