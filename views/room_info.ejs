                                    </linearGradient>
                                </defs>
                                <circle r="60" cx="57" cy="56" fill="transparent" stroke="url(#green-gradient)" stroke-width="5" stroke-dasharray="87 400"></circle>
                                <defs>
                                    <linearGradient id="green-gradient">
                                        <stop offset="0" stop-color="#6cd1c1"></stop>
                                        <stop offset="1" stop-color="#6ecf99"></stop>
                                    </linearGradient>
                                </defs>
